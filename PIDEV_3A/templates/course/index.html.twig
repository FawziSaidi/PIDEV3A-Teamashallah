{% extends 'base.html.twig' %}

{% block title %}Course List{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <h1 class="text-center my-4">Course List</h1>

        <div class="row mb-4">
            <div class="col-md-4">
                <label for="sort">Sort by:</label>
                <select id="sort" class="form-control" onchange="sortCourses()">
                    <option value="title" {% if sort == 'title' %}selected{% endif %}>Title</option>
                    <option value="university" {% if sort == 'university' %}selected{% endif %}>University</option>
                    <option value="category" {% if sort == 'category' %}selected{% endif %}>Category</option>
                    <option value="isPaid" {% if sort == 'isPaid' %}selected{% endif %}>Free/Paid</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="order">Order:</label>
                <select id="order" class="form-control" onchange="sortCourses()">
                    <option value="asc" {% if order == 'asc' %}selected{% endif %}>Ascending</option>
                    <option value="desc" {% if order == 'desc' %}selected{% endif %}>Descending</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="search">Search:</label>
                <input type="text" id="search" class="form-control" placeholder="Search courses..." value="{{ search }}" onkeypress="if(event.keyCode == 13) searchCourses()">
            </div>
        </div>
        <div class="row">
            {% for course in courses %}
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card h-100">
                        {% if course.thumbnail %}
                            <img src="{{ asset('uploads/thumbnails/' ~ course.thumbnail) }}" class="card-img-top" alt="{{ course.title }}">
                        {% else %}
                            <img src="{{ asset('images/default-thumbnail.jpg') }}" class="card-img-top" alt="Default Thumbnail">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ course.title }}</h5>
                            <p class="card-text">{{ course.description|slice(0, 100) ~ '...' }}</p>
                            <p class="card-text"><strong>About:</strong> {{ course.about|slice(0, 100) ~ '...' }}</p>
                            <p class="card-text"><strong>Category:</strong> {{ course.category }}</p>
                            <p class="card-text"><strong>University:</strong> {{ course.university }}</p>
                            <p class="card-text"><strong>Teacher:</strong> {{ course.teacher }}</p>
                            <p class="card-text"><strong>Start Date:</strong> {{ course.startDate|date('Y-m-d') }}</p>
                            <p class="card-text"><strong>Duration:</strong> {{ course.duration }} weeks</p>
                            <p class="card-text"><strong>Price:</strong> {{ course.isPaid ? course.price ~ ' USD' : 'Free' }}</p>
                            <div class="mt-auto">
                                <a href="{{ path('course_show', {'id': course.id}) }}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No courses found.</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        function sortCourses() {
            const sort = document.getElementById('sort').value;
            const order = document.getElementById('order').value;
            const search = document.getElementById('search').value;
            window.location.href = `{{ path('course_index') }}?sort=${sort}&order=${order}&search=${search}`;
        }

        function searchCourses() {
            const sort = document.getElementById('sort').value;
            const order = document.getElementById('order').value;
            const search = document.getElementById('search').value;
            window.location.href = `{{ path('course_index') }}?sort=${sort}&order=${order}&search=${search}`;
        }
    </script>
{% endblock %}