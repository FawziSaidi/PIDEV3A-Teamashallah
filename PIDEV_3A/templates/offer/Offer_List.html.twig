{% extends 'offer/Base_Offer.html.twig' %}

{% block Offer_List %}
    <h1>LIST OF OFFERS</h1>
    
    {% if is_granted('ROLE_HRM_STAGE') %}
        <!-- + BUTTON for HRMStage -->
        <div class="col-lg-4 col-sm-6 mb-5">
            <div class="card p-0 border-primary rounded-0 hover-shadow">
                <div class="card-body d-flex justify-content-center align-items-center" style="height: 100%;">
                    <a href="{{ path('Add_Offer') }}" class="btn btn-primary btn-lg" style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
                        <i class="ti-plus"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Toggle button for HRMStage -->
        <div class="mb-3">
            <button id="toggleOfferView" class="btn btn-info">
                See all offers
            </button>
        </div>
    {% endif %}

    <div class="row" id="offerList">
        {% for offer in offers %}
            <div class="col-lg-4 col-sm-6 mb-5 offer-item" data-hrm-id="{{ offer.hrmStage.id }}">
                <div class="card p-0 border-primary rounded-0 hover-shadow">
                    <img class="card-img-top rounded-0" src="{{ asset('OffersFrontoffice/images/courses/course-1.jpg') }}" alt="course thumb">
                    <div class="card-body">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <i class="ti-calendar mr-1 text-color"></i>
                                {{ offer.publicationDate|date('Y-m-d') }}
                            </li>
                            <li class="list-inline-item">
                                <a class="text-color" href="#">{{ offer.type }}</a>
                            </li>
                        </ul>
                        <a href="{{ path('Offer_Details', {'id': offer.id, 'title': offer.title}) }}">
                            <h4 class="card-title">{{ offer.title | upper }}</h4>
                        </a>
                        <p class="card-text mb-4">{{ offer.description }}</p>
                        <div class="actions">
                            {% if is_granted('ROLE_STUDENT') %}
                                <a href="{{ path('Add_Application', {'id': offer.id}) }}" class="btn btn-primary btn-sm">Apply</a>
                            {% elseif is_granted('ROLE_HRM_STAGE') %}
                                <a href="{{ path('Application_List', {'id': offer.id, 'title': offer.title}) }}" class="btn btn-info btn-sm">See Applications</a>
                                {% if app.user and app.user.id == offer.hrmStage.id %}
                                    <a href="{{ path('Update_Offer', {'id': offer.id}) }}" class="btn btn-warning btn-sm">Update</a>
                                    <a href="{{ path('Delete_Offer', {'id': offer.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_HRM_STAGE') %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const toggleButton = document.getElementById('toggleOfferView');
                const offerList = document.getElementById('offerList');
                let showOnlyMyOffers = true;

                function updateOfferVisibility() {
                    const offerItems = offerList.querySelectorAll('.offer-item');
                    const currentUserId = '{{ app.user.id }}';

                    offerItems.forEach(item => {
                        if (showOnlyMyOffers) {
                            item.style.display = item.dataset.hrmId === currentUserId ? '' : 'none';
                        } else {
                            item.style.display = '';
                        }
                    });
                }

                toggleButton.addEventListener('click', function() {
                    showOnlyMyOffers = !showOnlyMyOffers;
                    toggleButton.textContent = showOnlyMyOffers ? 'See all offers' : 'See only my offers';
                    updateOfferVisibility();
                });

                // Initially show only the current HRMStage's offers
                updateOfferVisibility();
            });
        </script>
    {% endif %}
{% endblock %}