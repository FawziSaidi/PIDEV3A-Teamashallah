<h1>Applications for Offer: {{ offer.title }}</h1>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            {# <th>Student Name</th> #}
            <th>Application Date</th>
            <th>Status</th>
            <th>Cover Letter</th>
            <th>CV</th>
        </tr>
    </thead>

    <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                {# <td>{{ application.student.name }}</td> #}
                <td>{{ application.applicationDate|date('Y-m-d') }}</td>
                <td>{{ application.status }}</td>
                <td>{{ application.coverLetter }}</td>
                <td>{{ application.cvPath }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">No applications found for this offer.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
