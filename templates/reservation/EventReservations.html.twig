{% extends 'reservation/BaseReserveNow.html.twig' %}

{% block title %} 
<a class="h2 text-primary font-secondary" href="courses.html">Reservations</a>
{% endblock %}

{% block add %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Reservations for " {{ event.title }} "</h3>
        </div>
        <div class="card-body">
            <!-- Détails de l'événement -->
            <div class="mb-4">
                <p><strong>Date:</strong> {{ event.date|date('F-d-Y') }}</p>
                <p><strong>At:</strong> {{ event.date|date('h:i A') }}</p>
                <p><strong>Location:</strong> {{ event.location }}</p>
                <p><strong>Available Seats:</strong> {{ event.availableSeats }}</p>
                <p><strong>Total Reserved Seats:</strong> {{ reservations|reduce((carry, r) => carry + r.numberOfSeats, 0) }}</p>

            </div>

            <!-- Tableau des réservations -->
            <table class="table table-bordered table-striped">
                <thead style="background-color: #1e1e4b; color: white;" class="text-center">
                    <tr>
                        <th>N°</th>
                        <th>Number of Seats</th>
                        <th>Reservation Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ reservation.numberOfSeats }}</td>
                            <td>{{ reservation.reservationStatus }}</td>
                            <td class="text-center">
                                 <a href="{{ path('UpdateReservation', {'idReservation': reservation.id, 'idEvent': event.id}) }}" class="btn btn-sm btn-primary">Update</a> 
                                <a href="{{ path('DeleteReservation', {'idReservation': reservation.id, 'idEvent': event.id}) }}" class="btn btn-sm btn-primary" style="background-color: #1e1e4b;">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No reservations found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
