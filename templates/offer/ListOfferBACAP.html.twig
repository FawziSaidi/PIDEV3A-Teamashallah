{% extends 'offer/Base_Offer.html.twig' %}

{% block Offer_List %}
	<h1>LIST OF OFFERS</h1>

	<div
		class="row">
		{# <a href="{{ path('Add_Offer') }}" class="btn btn-info">Add Offer</a> #}
		<!-- + BUTTON -->
		<div class="col-lg-4 col-sm-6 mb-5">
			<div class="card p-0 border-primary rounded-0 hover-shadow">
				<div class="card-body d-flex justify-content-center align-items-center" style="height: 100%;">
					<a href="{{ path('Add_Offer') }}" class="btn btn-primary btn-lg" style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
						<i class="ti-plus"></i>
						<!-- Assuming you're using Themify Icons -->
					</a>
				</div>
			</div>
		</div>
		{% for offer in offers %}
			<div class="col-lg-4 col-sm-6 mb-5">
				<div class="card p-0 border-primary rounded-0 hover-shadow">
					<img class="card-img-top rounded-0" src="images/courses/course-1.jpg" alt="course thumb">
					<div class="card-body">
						<ul class="list-inline mb-2">
							<li class="list-inline-item">
								<i class="ti-calendar mr-1 text-color"></i>
								{{ offer.publicationDate|date('Y-m-d') }}
							</li>
							<li class="list-inline-item">
								<a class="text-color" href="#">{{ offer.type }}</a>
							</li>
						</ul>
						<a href="{{ path('Offer_Details', {'id': offer.id, 'title': offer.title}) }}">
							<h4 class="card-title">{{ offer.title | upper }}</h4>
						</a>
						<p class="card-text mb-4">{{ offer.description }}</p>
						<div class="actions">
							<a href="{{ path('Add_Application', {'id': offer.id}) }}" class="btn btn-primary btn-sm">Apply</a>
							<a href="{{ path('Application_List', {'id': offer.id, 'title': offer.title}) }}" class="btn btn-info btn-sm">See Applications</a>
							<a href="{{ path('Delete_Offer', {'id': offer.id}) }}" class="btn btn-danger btn-sm">Delete</a>
							<a href="{{ path('Update_Offer', {'id': offer.id}) }}" class="btn btn-warning btn-sm">Update</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}