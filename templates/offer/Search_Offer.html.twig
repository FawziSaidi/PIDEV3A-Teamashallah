{% extends 'offer/Base_Offer_List.html.twig' %}

{% block Offer_List %}
	<h1>LIST OF OFFERS</h1>
	<div class="row">
		{% for offer in offers %}
			<div class="col-lg-4 col-sm-6 mb-5 d-flex">
				<div class="card p-0 border-primary rounded-0 hover-shadow flex-fill">
					<img class="card-img-top rounded-0" src="images/courses/course-1.jpg" alt="course thumb">
					<div class="card-body d-flex flex-column">
						<ul class="list-inline mb-2">
							<li class="list-inline-item">
								<i class="ti-calendar mr-1 text-color"></i>
								{{ offer.publicationDate|date('Y-m-d') }}
							</li>
							<li class="list-inline-item">
								<a class="text-color" href="#">{{ offer.type }}</a>
							</li>
						</ul>
						<a href="{{ path('Offer_Details', {'id': offer.id, 'title': offer.title}) }}">
							<h4 class="card-title">{{ offer.title | upper }}</h4>
						</a>
						<p class="card-text mb-4">{{ offer.description }}</p>
						<div class="actions mt-auto">
							<a href="{{ path('Add_Application', {'id': offer.id}) }}" class="btn btn-primary btn-sm w-100 mb-2">Apply</a>
							<a href="{{ path('Application_List', {'id': offer.id, 'title': offer.title}) }}" class="btn btn-info btn-sm w-100 mb-2">See Applications</a>
							<a href="{{ path('Update_Offer', {'id': offer.id}) }}" class="btn btn-warning btn-sm w-100 mb-2">Update</a>
							<a href="{{ path('Delete_Offer', {'id': offer.id}) }}" class="btn btn-danger btn-sm w-100 mb-2">Delete</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
