{% extends 'offer/Base_Offer_List.html.twig' %}

{% block Offer_List %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mr-4">LIST OF OFFERS</h1>
        <div class="d-flex">
            {% if is_granted('ROLE_STUDENT') %}
                <a href="{{ path('Application_List_Student') }}" class="btn btn-secondary btn-lg mr-4">
                    <i class="ti-eye"></i> See My Applications
                </a>
            {% endif %}
            {% if is_granted('ROLE_HRM_STAGE') %}
                <a href="{{ path('Add_Offer') }}" class="btn btn-primary btn-lg mr-4">
                    <i class="ti-plus"></i> Add Offer
                </a>
                <button id="toggleOfferView" class="btn btn-info">
                    See all offers
                </button>
            {% endif %}
        </div>
    </div>

    <div class="row" id="offerList">
        {% for offer in offers %}
            <div class="col-lg-4 col-sm-6 mb-5 offer-item" data-hrm-id="{{ offer.hrmStage.id }}">
                <div class="card p-0 border-primary rounded-0 hover-shadow h-100">
                    <img class="card-img-top rounded-0" src="{{ asset('uploads/offer_poster/' ~ offer.poster) }}" alt="Offer poster">
                    <div class="card-body d-flex flex-column">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <i class="ti-calendar mr-1 text-color"></i>
                                {{ offer.publicationDate|date('Y-m-d') }}
                            </li>
                            <li class="list-inline-item">
                                <a class="text-color" href="#">{{ offer.type }}</a>
                            </li>
                        </ul>
                        <a href="{{ path('Offer_Details', {'id': offer.id, 'title': offer.title}) }}">
                            <h4 class="card-title">{{ offer.title | upper }}</h4>
                        </a>
                        <p class="card-text mb-4">{{ offer.description }}</p>
                        <div class="actions mt-auto d-flex flex-column">
                            {% if is_granted('ROLE_STUDENT') %}
                                <a href="{{ path('Add_Application', {'id': offer.id}) }}" class="btn btn-sm btn-primary mb-2">Apply</a>
                            {% elseif is_granted('ROLE_HRM_STAGE') %}
                                <a href="{{ path('Application_List', {'id': offer.id, 'title': offer.title}) }}" class="btn btn-sm btn-primary mb-2" style="background-color: #5c5c77;">See Applications</a>
                                {% if app.user and app.user.id == offer.hrmStage.id %}
                                    <a href="{{ path('Update_Offer', {'id': offer.id}) }}" class="btn btn-sm btn-primary mb-2">Update</a>
                                    <a href="{{ path('Delete_Offer', {'id': offer.id}) }}" class="btn btn-sm btn-primary mb-2" style="background-color: #1e1e4b;">Delete</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_HRM_STAGE') %}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const toggleButton = document.getElementById('toggleOfferView');
                const offerList = document.getElementById('offerList');
                let showOnlyMyOffers = true;

                function updateOfferVisibility() {
                    const offerItems = offerList.querySelectorAll('.offer-item');
                    const currentUserId = '{{ app.user.id }}';

                    offerItems.forEach(item => {
                        if (showOnlyMyOffers) {
                            item.style.display = item.dataset.hrmId === currentUserId ? '' : 'none';
                        } else {
                            item.style.display = '';
                        }
                    });
                }

                toggleButton.addEventListener('click', function () {
                    showOnlyMyOffers = !showOnlyMyOffers;
                    toggleButton.textContent = showOnlyMyOffers ? 'See all offers' : 'See only my offers';
                    updateOfferVisibility();
                });

                // Initially show only the current HRMStage's offers
                updateOfferVisibility();
            });
        </script>
    {% endif %}
{% endblock %}

