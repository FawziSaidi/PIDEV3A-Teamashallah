{% extends 'back/base.html.twig' %}



{% block body %}
    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rec</th>
                <th>Date</th>
                <th>Issuer</th>
                <th>Motif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.rec }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.issuer }}</td>
                <td>{{ reclamation.motif }}</td>
                <td>
                    <a href="{{ path('app_rec_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_rec_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rec_new') }}">Create new</a>
{% endblock %}
